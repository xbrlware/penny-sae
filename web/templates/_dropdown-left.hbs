    <tr class="no-hover" id="hovertable-bottom-border"><td colspan="3"></tr>
    <tr class="no-hover">
        <td></td>
        <td><h3 class="h3-small" id="add-red-flags">Additional Red Flags</h3></td>
    </tr>
{{!--
    {{
        view App.ToggleRowView
        text = "Company stock has experienced recent price and/or volume anomalies."
        valueBinding = "redFlagParams._toggles.pv"
        showParameters = "pv"
    }}
--}}
    {{
        view App.ToggleRowView
        text = "Investors have made allegations about malfeasance of the company on social media."
        valueBinding = "redFlagParams._toggles.crowdsar"
        showParameters = "crowdsar"
    }}

    <tr class="no-hover">
        <td colspan="3">
            <button class="btn btn-success" id="find-button" {{action "sort_companies"}}>
                Find
            </button>
        </td>
    </tr>
</table>
