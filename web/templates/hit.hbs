{{!-- web/templates/hit.hbs --}}

<div class="accordion-group">
    <div class="accordion-heading">
        {{#link-to 'detail' h.cik classNames="accordion-toggle" data-toggle="collapse-next"}}
            <div class="list-group-item seventy square">
                <div class="hit-text-wrapper">
                    <h5 class="list-group-item-heading">
                        {{h.name}}
                    </h5>
                </div>

                <div class="row-fluid hit-badge-wrapper">
                    <div id="badge-header">
                        {{#unless h.redFlags.possible}}
                            <p class="lg-text">
                        {{/unless}}
                            Red Flags : {{h.redFlags.total}}/{{h.redFlags.possible}}
                        {{#unless h.redFlags.possible}}
                            </p>
                        {{/unless}}
                    </div>
                    
                    <br />

                    {{ view App.HitTextView redFlags=h.redFlags text="No Revenues" type="financials" first_column=true }}
                    {{ view App.HitTextView redFlags=h.redFlags text="Change In Business" type="symbology" first_column=true }}
                    {{ view App.HitTextView redFlags=h.redFlags text="Trading Suspensions" type="suspensions" first_column=true }}
                    {{ view App.HitTextView redFlags=h.redFlags text="Late Filings" type="delinquency" first_column=true }}
                    {{ view App.HitTextView redFlags=h.redFlags text="OTC Associates" type="otc_neighbors" first_column=true }}
                    {{ view App.HitTextView redFlags=h.redFlags text="PV Anomalies" type="pv" first_column=false }}
                    {{ view App.HitTextView redFlags=h.redFlags text="CROWDSAR" type="crowdsar" first_column=false }}
                </div>
            </div>
        {{/link-to}}
    </div>
    <div class="accordion-body collapse out ab-sidebar">
        <div class="accordion-inner">
        <table id="search_result_{{unbound h.cik}}" class="display"></table>
            {{view App.SearchResultsView cik=h.cik}}
        </div>
    </div>
</div>
