{{!-- web/templates/dropdown-right.hbs --}}

{{!--
{{#if pv}}
    <span class="centered"><h4>Price/Volume Anomaly Definition</h4></span>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label"> Price Spike (%) </label>
            {{
                input type="text"
                valueBinding=redFlagParams._params.pv.price_jump
                class="form-control input-text-hidden"
            }}
            {{
                view App.SliderView
                min=10
                max=1000
                step=5
                valueBinding=redFlagParams._params.pv.price_jump
                class="form-control input-slider-dropdown"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Trailing Volume Window (days) </label>
            {{
                input type="text"
                valueBinding=redFlagParams._params.pv.volume_window
                class="form-control input-text-hidden"
            }}
            {{
                view App.SliderView
                min= 0
                max=1000
                step=10
                valueBinding=redFlagParams._params.pv.volume_window
                class="input-slider-dropdown"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Trailing Volume Multiplier </label>
            {{
                input type="text"
                valueBinding=redFlagParams._params.pv.volume_multiplier
                class="form-control input-text-hidden"
            }}
            {{
                view App.SliderView
                min=0
                max=100
                step=1
                valueBinding=redFlagParams._params.pv.volume_multiplier
                class="form-control input-slider-dropdown"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Fall To (%) </label>
            {{
                input type="text"
                valueBinding=redFlagParams._params.pv.fall_to
                class="form-control input-text-hidden"
            }}    
            {{
                view App.SliderView
                min=0
                max=100
                step=1
                valueBinding=redFlagParams._params.pv.fall_to
                class="input-slider-dropdown"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Fall Within (days) </label>
            {{
                input type="text"
                valueBinding=redFlagParams._params.fall_within
                class="form-control input-text-hidden"
            }}
            {{
                view App.SliderView
                min=0
                max=1000
                step=10
                valueBinding=redFlagParams._params.pv.fall_within
                class="input-slider-dropdown"
            }}
        </div>
    </form>
{{/if}}
--}}

{{#if crowdsar}}
    <span class="centered"><h4>CROWDSAR Definition</h4></span>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label">From Date:</label>
            {{
                view App.DatepickerView
                defaultDate=redFlagParams._params.crowdsar.min_date
                valueBinding=redFlagParams._params.crowdsar.min_date
                class="form-control"
            }}
            <label class="control-label">To Date:</label>
            {{
                view App.DatepickerView
                defaultDate=redFlagParams._params.crowdsar.max_date
                valueBinding=redFlagParams._params.crowdsar.max_date
                class="form-control"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Field </label>
            {{
                view Ember.Select
                content=crowdsar_select_content.field
                valueBinding=redFlagParams._params.crowdsar.field
                optionValuePath="content.id"
                optionLabelPath="content.name"
                class="form-control"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Metric </label>
            {{
                view Ember.Select
                content=crowdsar_select_content.metric
                valueBinding=redFlagParams._params.crowdsar.metric
                optionValuePath="content.id"
                optionLabelPath="content.name"
                class="form-control"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Threshold </label>
            {{
                input type="number"
                valueBinding=redFlagParams._params.crowdsar.threshold
                class="form-control"
            }}
        </div>

    </form>
{{/if}}

{{!--
{{#if tout}}
    <span class="centered"><h4>Tout Definition</h4></span>
        <form class="form-horizontal">
            <div class="form-group">
                <label class=" control-label"> Tout Metric </label>
                
                    <span class="centered">
