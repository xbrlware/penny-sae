{{!-- web/templates/board.hbs --}}

<h3 id="mbinline">
  {{routeName_pretty}} : {{selection_pretty}}
</h3>

<h5 id="post-total">
  {{n_posts}} posts total
</h5>

{{#if split_by_filter_nonempty}}
  <span id="examine-button">
    <button class="btn btn-primary" {{action 'drilldown'}}>
      Examine Selected
    </button>
  </span>
{{/if}}

<div class="col-xs-12" id="techan-wrapper">
  <div id="time-chart" class="chart"></div>
</div>

<hr>

<div class="row-fluid">
  <div class="col-xs-6">
    <div class="tab-content" id="vis-wrapper">
      <div role="tabpanel" class="tab-pane active" id="time">
            {{#each topX}}
            <div class="row-fluid">
              <div class="col-xs-2">
                <div id='gauge-{{this}}' class="gauge chart"></div>
              </div>

              <div class="col-xs-10">
                <div id="ts-{{this}}" class="ts chart" {{action "top_x_clicked" item}}>
                  <span class="title"></span>
                  <div class="count-wrapper pull-right">
                    <span class="before"></span> |
                    <span class="during"></span> |
                    <span class="after"></span>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  <div class="col-xs-6">
    <div class="row-fluid">
        {{forum-posts model.data}}
    </div>
  </div>
</div>
