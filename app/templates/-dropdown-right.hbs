{{#if financials}}
    <span class="centered"><h4>No Business, No Revenues, No Product Definitions</h4></span>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label">From Date:</label>
            {{
                date-picker
                defaultDate=redFlagParams._params.financials.min_date
                value=redFlagParams._params.financials.min_date
                class="form-control"
            }}
                    
            <label class="control-label">To Date:</label>
            {{
                date-picker
                defaultDate=redFlagParams._params.financials.max_date
                value=redFlagParams._params.financials.max_date
                class="form-control"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Financial Measure </label>
            {{
                x-select
                model=financials_select_content
                value=redFlagParams._params.financials.field
                valueKey="id"
                labelKey="name"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Value </label>
            {{
                input type="text"
                value=redFlagParams._params.financials.value
                class="form-control input-text-hidden"
            }}
            {{
                slider-component
                min=0
                max=1000000
                step=100
                value=redFlagParams._params.financials.value
                class="input-slider-dropdown"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Number of Filings Below Value </label>
            {{
                input
                type="number"
                value=redFlagParams._params.financials.threshold
                class="form-control"
            }}
        </div>
    </form>
{{/if}}

