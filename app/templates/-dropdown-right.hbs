{{!-- app/templates/-dropdown-right.hbs --}}

{{!--
{{#if pv}}
    <span class="centered"><h4>Price/Volume Anomaly Definition</h4></span>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label"> Price Spike (%) </label>
            {{
                input type="text"
                value=redFlagParams._params.pv.price_jump
                class="form-control input-text-hidden"
            }}
            {{
                slider-component
                min=10
                max=1000
                step=5
                value=redFlagParams._params.pv.price_jump
                class="form-control input-slider-dropdown"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Trailing Volume Window (days) </label>
            {{
                input type="text"
                value=redFlagParams._params.pv.volume_window
                class="form-control input-text-hidden"
            }}
            {{
                slider-component
                min= 0
                max=1000
                step=10
                value=redFlagParams._params.pv.volume_window
                class="input-slider-dropdown"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Trailing Volume Multiplier </label>
            {{
                input type="text"
                value=redFlagParams._params.pv.volume_multiplier
                class="form-control input-text-hidden"
            }}
            {{
                slider-component
                min=0
                max=100
                step=1
                value=redFlagParams._params.pv.volume_multiplier
                class="form-control input-slider-dropdown"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Fall To (%) </label>
            {{
                input type="text"
                value=redFlagParams._params.pv.fall_to
                class="form-control input-text-hidden"
            }}    
            {{
                slider-component
                min=0
                max=100
                step=1
                value=redFlagParams._params.pv.fall_to
                class="input-slider-dropdown"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Fall Within (days) </label>
            {{
                input type="text"
                value=redFlagParams._params.fall_within
                class="form-control input-text-hidden"
            }}
            {{
                slider-component
                min=0
                max=1000
                step=10
                value=redFlagParams._params.pv.fall_within
                class="input-slider-dropdown"
            }}
        </div>
    </form>
{{/if}}
--}}

{{#if crowdsar}}
    <span class="centered"><h4>Social Media Malfeasance Definition</h4></span>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label">From Date:</label>
            {{
                date-picker
                defaultDate=redFlagParams._params.crowdsar.min_date
                value=redFlagParams._params.crowdsar.min_date
                class="form-control"
            }}
            <label class="control-label">To Date:</label>
            {{
                date-picker
                defaultDate=redFlagParams._params.crowdsar.max_date
                value=redFlagParams._params.crowdsar.max_date
                class="form-control"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Field </label>
            {{
                x-select
                model=crowdsar_select_content.field
                value=redFlagParams._params.crowdsar.field
                valueKey="id"
                labelKey="name"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Metric </label>
            {{
                x-select
                model=crowdsar_select_content.metric
                value=redFlagParams._params.crowdsar.metric
                valueKey="id"
                labelKey="name"
            }}
        </div>
        <div class="form-group">
            <label class="control-label"> Threshold </label>
            {{
                input type="number"
                value=redFlagParams._params.crowdsar.threshold
                class="form-control"
            }}
        </div>

    </form>
{{/if}}

