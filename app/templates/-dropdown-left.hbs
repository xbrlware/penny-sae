    <tr class="no-hover">
        <td colspan="3">
            <button class="btn btn-success" id="find-button" {{action "sort_companies"}}>
                Find
            </button>
        </td>
    </tr>
    <tr class="no-hover">
        <td colspan="3">
            <button class="btn btn-success" id="find-button" {{action "refresh_companies"}}>
                Refresh
            </button>
        </td>
    </tr>
</table>

